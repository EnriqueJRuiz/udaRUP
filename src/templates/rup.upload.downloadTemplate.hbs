

  {{#each files}}
    <li class="list-group-item template-download">
      <div class="row">
        <div class="col-xs-6 col-md-3">
          <p class="name text-xs-left"><b><a href="{{url}}">{{name}}</a></b></p>
          <span class="name text-xs-left"><span class="type">{{type}}</span></span>


        </div>
        <div class="col-xs-6 col-md-4 fileupload-buttonbar">
              <a href="{{url}}">
                <button type="button" class="btn btn-primary download">
                    <i class="fa fa-download" aria-hidden="true"></i>
                    <span>Abrir</span>
                </button>
              </a>

                <button type="button" class="btn btn-secondary delete" data-type="{{delete_type}}" data-url="{{delete_url}}">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                    <span>Eliminar</span>
                </button>
        </div>
      </div>
    </li>
  {{/each}}
