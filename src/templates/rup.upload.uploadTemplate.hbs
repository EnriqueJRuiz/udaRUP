

  {{#each files}}
    <li class="list-group-item template-upload">
      <div class="row">
        <div class="col-xs-6 col-md-3">
          <p class="name text-xs-left"><b>{{name}}</b></p>
          <span class="name text-xs-left"><span class="type">{{type}}</span><span class="type">{{size}}</span></span>


        </div>

        <div class="col-xs-6 col-md-4 fileupload-buttonbar">
            {{#if ../notSubmitInForm}}
                <button class="btn btn-primary start">
                    <i class="fa fa-upload" aria-hidden="true"></i>
                    <span>{{i18n "rup_upload.openUploaded"}}</span>
                </button>
            {{/if}}
                <button class="btn btn-secondary cancel">
                    <i class="fa fa-times-circle" aria-hidden="true"></i>
                    <span>{{i18n "rup_upload.cancelUpload"}}</span>
                </button>
        </div>

      </div>

    </li>
  {{/each}}
